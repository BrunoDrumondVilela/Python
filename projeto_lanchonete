      print('Voc√™ adicionou MILK SHAKE\n')

    elif escolha_pedido == '17':
      carrinho.append('SUCO DE LARANJA 1,5L')
      total += 8
      print('Voc√™ adicionou SUCO DE LARANJA 1,5L\n')

    elif escolha_pedido == '18':
      carrinho.append('SUCO DE GARRAFINHA 600ml')
      total += 4
      print('Voc√™ adicionou SUCO DE GARRAFINHA 600ml\n')

    elif escolha_pedido == '19':
      carrinho.append('CERVEJA LATA')
      total += 3
      print('Voc√™ adicionou CERVEJA LATA\n')

    elif escolha_pedido == '20':
      carrinho.append('CERVEJA 1L')
      total += 10
      print('Voc√™ adicionou CERVEJA 1L\n') 

    elif escolha_pedido.upper().strip() == 'C':
      ver_carrinho()
      print(f'TOTAL A PAGAR: R${total:.2f}\n')

    elif escolha_pedido.upper().strip() == 'P':
      print('----- √ÅREA DE PAGAMENTO -----\n')
      print(f'TOTAL A PAGAR: R${total:.2f}\n')
      
      # La√ßo de repeti√ß√£o para garantir o valor do input do usu√°rio: 
      while True:
        try:
          forma_pag = int(input('Escolha uma forma de pagamento:\n[1] - Dinheiro\n[2] - Cart√£o\nSua escolha: '))
        except:
          print('VALOR INV√ÅLIDO\n')
          continue
        break


      # Op√ß√£o de pagamento com cart√£o escolhida(n√£o gera troco):
      if forma_pag == 2:
        print('PAGAMENTO EFETUADO COM CART√ÉO')
        print(f'Foram gastos R${total:.2f} na loja.\nVoc√™ comprou {carrinho}\nObrigado por comprar no C√≥digo Burguer. Volte Sempre! üçüüçîüòÅ')
        break

      # Op√ß√£o de pagamento com dinheiro escolhida:
      valor_pag = int(input('Com quanto ir√° pagar:'))

      while valor_pag < total:
        valor_pag = int('VALOR INSUFICIENTE. Digite novamente o valor: ')

      troco = valor_pag - total

      # Emiss√£o das notas de troco:
      while troco != 0:
          while troco//50 > 0:
              troco -= 50
              nota50 += 1
          while troco//20 > 0:
              troco -= 20
              nota20 += 1
          while troco//10 > 0:
              troco -= 10
              nota10 += 1
          while troco//5 > 0:
              troco -= 5
              nota5 += 1
          while troco//2 > 0:
              troco -= 2
              nota2 += 1
          while troco > 0:
              moeda = troco
              troco -= 1

      # As notas de troco s√≥ ir√£o aparecer caso o troco seja diferente da valor pago pelo usu√°rio: 
      if valor_pag != total:
        print('Seu troco √©:\n')
        if nota50 > 0:
          print(f'{nota50} nota(s) de cinquenta reais\n')
        if nota20 > 0:
          print(f'{nota20} nota(s) de vinte reais\n')
        if nota10 > 0:
          print(f'{nota10} nota(s) de dez reais\n')
        if nota5 > 0:
          print(f'{nota5} nota(s) de cinco reais\n')
        if nota2 > 0:
          print(f'{nota2} nota(s) de dois reais\n')
        if moeda > 0:
          print(f'{moeda} moeda(s) de um real.\n')

        print(f'PAGAMENTO EFETUADO\nForam gastos R${total:.2f} na loja.\nVoc√™ comprou {carrinho}\nObrigado por comprar no C√≥digo Burguer. Volte Sempre! üçüüçîüòÅ')
        break
      else:
        print(f'PAGAMENTO EFETUADO\nForam gastos R${total:.2f} na loja.\nVoc√™ comprou {carrinho}\nObrigado por comprar no C√≥digo Burguer. Volte Sempre! üçüüçîüòÅ')
        break

    # Confirma√ß√£o de sa√≠da do programa:
    elif escolha_pedido.upper().strip() == 'F':
      print(f'Seu carrinho atual: {carrinho}\nVoc√™ ir√° perder todo o conte√∫do do carrinho!')
      resposta = input('Tem certeza que quer cancelar o pedido?\nDigite [S] para SIM ou [N] para N√ÉO: ')
      while resposta.upper().strip() != "S" and resposta.upper().strip() != "N":
        resposta = input('VALOR INV√ÅLIDO.\nTem certeza que quer cancelar o pedido?\nDigite [S] para SIM ou [N] para N√ÉO: ')
      if resposta.upper().strip() == "S":
        print("Pedido cancelado! Volte sempre üòÅ") 
        break
    
    # Garante o retorno do input caso seja digitado algo inv√°lido:
    else: 
      escolha_pedido = input('VALOR INV√ÅLIDO. TENTE NOVAMENTE.\n Digite o n√∫mero do item que deseja adicionar:\n[F] - Para sair\n[C] - Para ver o carrinho\n[P] - Para efetuar o pagamento\nSua escolha: \n')
else:
  print('Pena que n√£o continuar√° o processo\nVolte sempre que quiser üòÅ')
